<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" styleClass="main-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saferoom.controller.MainController">
    <left>
        <VBox prefWidth="80.0" styleClass="sidebar-compact">
            <children>
                <!-- Logo -->
                <HBox alignment="CENTER" prefHeight="70.0" styleClass="sidebar-header-compact">
                    <children>
                        <StackPane prefHeight="32.0" prefWidth="32.0">
                            <children>
                                <SVGPath content="M12 2L2 7V17L12 22L22 17V7L12 2Z M16.5 8C16.5 10 15 11 12 12C9 13 7.5 14 7.5 16" styleClass="sidebar-logo-icon" />
                            </children>
                        </StackPane>
                    </children>
                </HBox>
                <!-- Menü Butonları -->
                <VBox fx:id="navBox" styleClass="sidebar-nav-compact" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox fx:id="dashboardButton" alignment="CENTER" styleClass="nav-button-compact" spacing="4.0">
                            <children>
                                <FontIcon iconLiteral="fas-dice-d6" styleClass="nav-icon-compact" />
                                <Label text="Dashboard" styleClass="nav-text-compact" />
                            </children>
                        </VBox>
                        <VBox fx:id="roomsButton" alignment="CENTER" styleClass="nav-button-compact" spacing="4.0">
                            <children>
                                <FontIcon iconLiteral="fas-network-wired" styleClass="nav-icon-compact" />
                                <Label text="Rooms" styleClass="nav-text-compact" />
                            </children>
                        </VBox>
                        <VBox fx:id="messagesButton" alignment="CENTER" styleClass="nav-button-compact" spacing="4.0">
                            <children>
                                <FontIcon iconLiteral="fas-comment" styleClass="nav-icon-compact" />
                                <Label text="Messages" styleClass="nav-text-compact" />
                            </children>
                        </VBox>
                        <VBox fx:id="friendsButton" alignment="CENTER" styleClass="nav-button-compact" spacing="4.0">
                            <children>
                                <FontIcon iconLiteral="fas-user-friends" styleClass="nav-icon-compact" />
                                <Label text="Friends" styleClass="nav-text-compact" />
                            </children>
                        </VBox>
                        <VBox fx:id="fileVaultButton" alignment="CENTER" styleClass="nav-button-compact" spacing="4.0">
                            <children>
                                <FontIcon iconLiteral="far-file-alt" styleClass="nav-icon-compact" />
                                <Label text="File Vault" styleClass="nav-text-compact" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <BorderPane styleClass="content-pane" >
            <top>
                <HBox fx:id="headerBar" alignment="CENTER_LEFT" prefHeight="56.0" spacing="16.0" styleClass="header-bar" BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="viewTitleLabel" styleClass="view-title" text="Dashboard" />
                        <!-- Centered search field -->
                        <HBox HBox.hgrow="ALWAYS" alignment="CENTER">
                            <children>
                                <TextField promptText="Search..." styleClass="search-field" prefWidth="420.0" />
                            </children>
                        </HBox>
                        <JFXButton styleClass="icon-button">
                            <graphic>
                                <FontIcon iconLiteral="fas-bell" styleClass="header-icon" />
                            </graphic>
                        </JFXButton>
                        <!-- User Avatar with Status -->
                        <Pane fx:id="userAvatarContainer" styleClass="user-avatar-container">
                            <children>
                                <Label fx:id="userAvatar" styleClass="user-avatar-header" text="U" />
                                <Pane fx:id="statusDot" styleClass="status-dot" />
                            </children>
                        </Pane>
                        <!-- Window control buttons -->
                        <JFXButton fx:id="minButton" styleClass="window-button" mnemonicParsing="false">
                            <graphic>
                                <FontIcon iconLiteral="fas-minus" styleClass="header-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="maxButton" styleClass="window-button" mnemonicParsing="false">
                            <graphic>
                                <FontIcon iconLiteral="far-square" styleClass="header-icon" />
                            </graphic>
                        </JFXButton>
                        <JFXButton fx:id="closeButton" styleClass="window-button window-close" mnemonicParsing="false">
                            <graphic>
                                <FontIcon iconLiteral="fas-times" styleClass="header-icon" />
                            </graphic>
                        </JFXButton>
                    </children>
                    <padding>
                        <Insets left="32.0" right="16.0" />
                    </padding>
                </HBox>
            </top>
            <center>
                <ScrollPane fx:id="contentArea"
                            fitToWidth="true"
                            fitToHeight="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED"
                            styleClass="content-scroll-pane"
                            BorderPane.alignment="CENTER" />

            </center>
        </BorderPane>
    </center>
</BorderPane>
